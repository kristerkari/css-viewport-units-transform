{
  "name": "css-viewport-units-transform",
  "version": "0.10.3",
  "description": "Transform CSS viewport units of a style object to pixels based on window dimensions",
  "main": "dist/index.js",
  "author": "Krister Kari",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "!**/__tests__",
    "!**/__mocks__",
    "!**/perf-tests",
    "CHANGELOG.md",
    "README.md"
  ],
  "keywords": [
    "CSS-in-JS",
    "styles",
    "CSS",
    "Viewport units"
  ],
  "bugs": {
    "url": "https://github.com/kristerkari/css-viewport-units-transform/issues"
  },
  "homepage": "https://github.com/kristerkari/css-viewport-units-transform#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kristerkari/css-viewport-units-transform.git"
  },
  "scripts": {
    "benchmark": "yarn build && node benchmark.js",
    "size": "npm run build && size-limit",
    "prepublish": "npm run build",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --ignore src/__tests__,src/__mocks__",
    "precommit": "lint-staged",
    "release": "npmpub",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@size-limit/file": "^11.0.2",
    "babel-jest": "^29.4.2",
    "benchmark": "^2.1.4",
    "husky": "^9.0.11",
    "jest": "^29.4.2",
    "lint-staged": "^15.2.2",
    "npmpub": "^5.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "size-limit": "^11.0.2"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  },
  "size-limit": [
    {
      "limit": "600 B",
      "path": "dist/index.js",
      "gzip": true
    }
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  }
}
